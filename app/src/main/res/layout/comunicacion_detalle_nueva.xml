<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.main.ui.comunicaciones.detalle.ComunicacionDetalleNueva">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/comunicacion_detalle_nueva_topbar"
            style="@style/Widget.MaterialComponents.Toolbar.Surface"
            />
        <!--app:navigationIcon="@drawable/ic_volver"-->

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipComunicacionDestino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="Para: " />

        <Button
            android:id="@+id/btnSeleccionarDestino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/chipComunicacionDestino"
            android:text="Seleccionar destino"
            android:textColor="@color/black"
            app:strokeColor="@color/white"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="10sp"
            android:textAlignment="center" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chipComunicacionDestino" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAlumnoAsociado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="Alumno: " />

        <Button
            android:id="@+id/btnSeleccionarAlumno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/chipAlumnoAsociado"
            android:text="Seleccionar alumno"
            android:textColor="@color/black"
            app:strokeColor="@color/white"
            style="?attr/materialButtonOutlinedStyle"
            android:textSize="10sp"
            android:textAlignment="center" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnSeleccionarAlumno" />

        <EditText
            android:id="@+id/asuntoEditText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/line2"
            android:backgroundTint="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Asunto"
            android:textSize="14sp"
            android:text=""/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/asuntoEditText" />

        <EditText
            android:id="@+id/textoEditText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/line3"
            android:backgroundTint="@android:color/white"
            android:hint="Cuerpo del mensaje"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:text=""/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAdjunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textoEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:closeIconVisible="true"
            android:text="Adjuntos"
            android:visibility="invisible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>